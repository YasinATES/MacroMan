{% extends 'base.html.twig' %}

{% block title %}Setting index{% endblock %}

{% block content %}
    <h1>Setting index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Keywords</th>
                <th>Company</th>
                <th>Address</th>
                <th>Fax</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Smtpserver</th>
                <th>Smtpmail</th>
                <th>Smtppaswd</th>
                <th>Smtpport</th>
                <th>Aboutus</th>
                <th>Contact</th>
                <th>Referances</th>
                <th>Status</th>
                <th>Create_at</th>
                <th>Update_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.id }}</td>
                <td>{{ setting.title }}</td>
                <td>{{ setting.description }}</td>
                <td>{{ setting.keywords }}</td>
                <td>{{ setting.company }}</td>
                <td>{{ setting.address }}</td>
                <td>{{ setting.fax }}</td>
                <td>{{ setting.phone }}</td>
                <td>{{ setting.email }}</td>
                <td>{{ setting.smtpserver }}</td>
                <td>{{ setting.smtpmail }}</td>
                <td>{{ setting.smtppaswd }}</td>
                <td>{{ setting.smtpport }}</td>
                <td>{{ setting.aboutus }}</td>
                <td>{{ setting.contact }}</td>
                <td>{{ setting.referances }}</td>
                <td>{{ setting.status }}</td>
                <td>{{ setting.createAt ? setting.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ setting.updateAt ? setting.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_setting_show', {'id': setting.id}) }}">show</a>
                    <a href="{{ path('admin_setting_edit', {'id': setting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="20">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_setting_new') }}">Create new</a>
{% endblock %}
