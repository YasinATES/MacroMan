{% extends 'admin/base.html.twig' %}



{% block content %}
    <h1>Sipariş Detayı</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ order.userid }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ order.amount }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.adress }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.phone }}</td>
            </tr>
            <form action="{{ path('admin_orders_update',{'id':order.id}) }}" method="post">
            <tr>
                <th>Shipinfo</th>
                <td>
                    <textarea name="shipinfo" cols="100" rows="3">
                        {{ order.shipinfo }}
                    </textarea>
                </td>
            </tr>
            <tr>
                <th>Yönetici Notu</th>
                <td>
                    <textarea name="note" cols="100" rows="3">
                        {{ order.note }}
                    </textarea>
                </td>
            </tr>
            <tr>
                <th>Status</th>
                <td>
                    <select name="status">
                        <option> {{ order.status }} </option>
                        <option> accepted </option>
                        <option> inshipping </option>
                        <option> canceled </option>
                        <option> complated </option>
                    </select>

                    <input type="submit" value="Guncelle">
                </td>
            </tr>
            </form>


        </tbody>
    </table>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Sale Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>

        {% for product in orderdetail %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.quantity }}</td>
                <td>{{ product.amount }}</td>
                <td>{{ product.status }}</td>
            </tr>

        {% endfor %}
        <tr>
            <td colspan="5"> <b>Alışveriş Tutarı: {{ order.amount }}</b></td>
        </tr>
        </tbody>
    </table>





{% endblock %}
