{% extends 'admin/base.html.twig' %}

{% block title %}Resim Ekle{% endblock %}

{% block content %}
<div class="col-md-12">
    <h1>{{ product.title }}</h1>

    <form action="{{ path('admin_product_iupdate',{'id':id}) }}" method="post" enctype="multipart/form-data">
        Yüklenecek resmi seçiniz:
        <div class="form-group">
            <input type="file" name="imagename" id="fileToUpload">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-check"></span> Kaydet</button>
        </div>
    </form>

    {% if product.image!=null %}
        <img src="{{ asset('uploads') }}/images/{{ product.image }}">
    {% endif %}
</div>

{% endblock %}
